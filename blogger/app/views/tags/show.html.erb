<h1>Article Tagged with <%= @tag.name %></h1>

<ul>
	<% @tag.articles.each do |article| %>
		<li><%= link_to article.title, article_path(article) %></li>
	<% end %>
</ul>

<% if logged_in? %>
	<br />
	<p>
		<%= link_to "Delete this Tag?", tag_path(@tag), method: :delete, data: {confirm: "Really delete the tag?"}, class: "delete_tag" %>
	</p>
<% end %>